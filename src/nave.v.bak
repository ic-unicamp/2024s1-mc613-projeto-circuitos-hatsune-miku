module nave(
    input CLOCK_50,
    input reset,
    input esquerda,
    input direita,
    output reg [9:0] x,
    output reg [9:0] y, 
    output reg [9:0] LarguraBarra,
    output reg [9:0] AlturaBarra,
	 input pausa,
	 input reiniciarJogo
);
  
    reg [9:0] deslocamento = 8; 
    assign resetBarra = reset || reiniciarJogo;

    always @(posedge CLOCK_50 or posedge resetBarra) begin
        if (resetBarra) begin
            x <= 270; 
            y <= 424;
            LarguraBarra <= 120; 
            AlturaBarra <= 3;  
        end else begin
				if (pausa == 0) begin
					if (direita && ((x + deslocamento + LarguraBarra) < 640)) begin
						 x <= x + deslocamento;
					end 
					if (esquerda && ((x - deslocamento) < 640)) begin
						 x <= x - deslocamento;
					end 
				end
        end
    end

endmodule
